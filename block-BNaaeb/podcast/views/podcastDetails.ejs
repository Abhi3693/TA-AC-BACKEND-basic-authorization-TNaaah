<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/podcastDetails.css" />
    <link rel="stylesheet" href="/stylesheets/common.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include('partials/header') %>
    <div class="container">
      <div class="podcast-holder">
        <div><i class="ri-music-2-fill"></i></div>
        <h1><%=podcast.name%></h1>
        <% if(podcast.section === "free") { %>
        <h2 class="free"><%=podcast.section%></h2>
        <% } else if(podcast.section === "vip") { %>
        <h2 class="vip"><%=podcast.section%></h2>
        <% } else { %>
        <h2 class="premium"><%=podcast.section%></h2>
        <% } %>
        <h2><%=podcast.category%></h2>
        <% if(user.isAdmin) { %>
        <div class="btn-holder">
          <a class="btn edit" href="/podcasts/<%=podcast._id%>/edit">Edit</a>
        </div>
        <div class="btn-holder">
          <a class="btn logout" href="/podcasts/<%=podcast._id%>/delete"
            >Delete</a
          >
        </div>

        <% if(!podcast.isVarified) { %>
        <div><a class="verify" href="#">Verify</a></div>
        <% } %>
        <!--  -->
        <% } %>
      </div>
    </div>
  </body>
</html>
